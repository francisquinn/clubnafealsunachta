<style>
  .cnf-event {
    display: grid;
    grid-template-columns: 1fr;
    grid-template-rows: 1fr auto;
    align-items: center;
  }

  h3 {
    /* font-family: "Uncial Antiqua"; */
    font-size: 1.5rem;
    margin: 0;
  }

  .cnf-event__info {
    grid-row: 1 / 2;
  }

  .cnf-event__social {
    margin-top: 0.75rem;
  }

  .cnf-event__location {
    margin-top: 0.25rem;
  }

  .cnf-event__social--svg {
    margin-right: 1rem;
    width: 30px;
    height: 30px;
  }

  .cnf-event__dialog {
    text-align: center;
  }

  ul {
    margin: 0;
  }

  @media (min-width: 480px) {
    .cnf-event {
      grid-template-columns: 1fr auto;
    }

    .cnf-event__info {
      grid-column: 1 / 2;
    }

    .cnf-event__dialog {
      grid-row: 1 / span 2;
      grid-column: 2 / 3;
    }
  }
</style>

