<style>
  h1 {
    color: var(--green);
    font-family: "Uncial Antiqua";
    font-size: 1.75rem;
    margin: 0.5rem 0 1rem 0;
  }

  #hero {
    text-align: center;
    padding-bottom: 4rem;
  }

  .cnf-hero__logo {
    width: 40%;
    margin: 0 auto;
  }

  .cnf-hero__content {
    padding: 0 1rem;
  }

  .cnf-hero__logo--svg {
    pointer-events: none;
    width: 150px;
    height: 150px;
  }

  .cnf-hero__links {
    width: 60%;
    margin: 0 auto;
    padding-top: 1rem;
  }

  .cnf-hero__social {
    display: flex;
    justify-content: space-evenly;
    gap: 40px;
    padding-top: 1.5rem;
  }

  .cnf-hero__social--link {
    display: inline-block;
  }

  .cnf-hero__social--svg {
    pointer-events: none;
    width: 50px;
    height: 50px;
  }

  @media (min-width: 576px) {
    #hero {
      display: grid;
      text-align: start;
      width: 90%;
      gap: 10px;
      margin: 0 auto;
      grid-template-columns: 2fr 1fr;
    }

    .cnf-hero__content {
      order: 1;
    }

    .cnf-hero__logo {
      margin: 0;
      order: 2;
    }

    .cnf-hero__links {
      display: grid;
      grid-template-columns: auto 1fr;
      gap: 24px;
      width: 100%;
    }

    .cnf-hero__social {
      display: block;
      padding: 0;
    }

    .cnf-hero__social--link {
      margin-right: 1rem;
    }
  }

  @media (min-width: 768px) {
    #hero {
      width: 85%;
    }

    .cnf-hero__content--heading {
      font-size: 2rem;
    }

    .cnf-hero__logo--svg {
      width: 170px;
      height: 170px;
    }

    .cnf-hero__social--link {
      margin-right: 1.5rem;
    }
  }

  @media (min-width: 992px) {
    #hero {
      width: 75%;
    }

    .cnf-hero__content--heading {
      font-size: 2.25rem;
    }

    .cnf-hero__logo--svg {
      width: 200px;
      height: 200px;
    }
  }

  @media (min-width: 1200px) {
    #hero {
      width: 70%;
      gap: 40px;
    }

    .cnf-hero__content--heading {
      font-size: 2.5rem;
    }

    .cnf-hero__logo--svg {
      width: 220px;
      height: 220px;
    }
  }

  @media (min-width: 1380px) {
    #hero {
      width: 65%;
    }

    .cnf-hero__content--heading {
      font-size: 2.75rem;
    }

    .cnf-hero__logo--svg {
      width: 240px;
      height: 240px;
    }
  }

  @media (min-width: 1620px) {
    #hero {
      width: 60%;
      gap: 40px;
    }

    .cnf-hero__content--heading {
      font-size: 3rem;
    }

    .cnf-hero__logo--svg {
      width: 260px;
      height: 260px;
    }
  }
</style>

<section id="hero">
  <div class="cnf-hero__logo">
    <object
      class="cnf-hero__logo--svg"
      data="/cnf-logo.svg"
      type="image/svg+xml"></object>
  </div>
  <div class="cnf-hero__content">
    <h1 class="cnf-hero__content--heading">Club na Fealsúnachta</h1>
    <p>
      Join us for thought-provoking philosophical discussions—no experience
      needed, just curiosity and an open mind!
    </p>
    <div class="cnf-hero__links">
      <button class="cnf-button cnf-button__primary">Get in touch!</button>
      <div class="cnf-hero__social">
        <a
          href="https://www.instagram.com/clubnafealsunachta/"
          class="cnf-hero__social--link"
          target="_blank"
        >
          <object
            class="cnf-hero__social--svg"
            data="/instagram.svg"
            type="image/svg+xml"></object></a
        >
        <a
          href="https://www.facebook.com/people/Club-na-Fealsúnachta/61578150433186/"
          class="cnf-hero__social--link"
          target="_blank"
          ><object
            class="cnf-hero__social--svg"
            data="/facebook.svg"
            type="image/svg+xml"></object></a
        >
        <!-- <a href="https://www.instagram.com/clubnafealsunachta/" target="_blank"
          >support</a
        > -->
      </div>
    </div>
  </div>
</section>
